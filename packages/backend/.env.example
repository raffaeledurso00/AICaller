# packages/backend/.env.example

# App Config
API_PORT=3000
NODE_ENV=development
LOG_LEVEL=info

# Database Config
MONGODB_URI=mongodb://user:password@localhost:27017/aicaller
REDIS_HOST=localhost
REDIS_PORT=6379

# JWT Authentication
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRATION=1d

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=500
OPENAI_EMBEDDING_MODEL=text-embedding-ada-002

# Twilio Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=your_twilio_phone_number_here

# Telephony Settings
ENABLE_REAL_TIME_ANALYSIS=true
ENABLE_SPEECH_TO_TEXT=true
ENABLE_SUPERVISOR_INTERVENTION=true
AUDIO_TMP_DIRECTORY=/tmp/aicaller
CALL_RECORDING_ENABLED=true
CALL_RECORDING_FORMAT=wav

# Webhook Configuration
WEBHOOK_SECRET_KEY=your_webhook_secret_key_here
WEBHOOK_TIMEOUT=5000
WEBHOOK_RETRY_ATTEMPTS=3
WEBHOOK_RETRY_DELAY=5000

# Cache Settings
CACHE_TTL=300
CACHE_CHECK_PERIOD=60
CACHE_ENABLED=true

# Resilience Settings
MAX_RETRIES=3
RETRY_DELAY=1000
CIRCUIT_FAILURE_THRESHOLD=5
CIRCUIT_RESET_TIMEOUT=30000
CIRCUIT_HALF_OPEN_SUCCESS_THRESHOLD=2
ERROR_LOG_ENABLED=true
SENTRY_ENABLED=false
SENTRY_DSN=your_sentry_dsn_here

# Security Config
ENCRYPTION_KEY=your_strong_encryption_key_here
ENCRYPTION_ENABLED=true
AUDIT_LOGGING_ENABLED=true
GDPR_ENABLED=true